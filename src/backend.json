          "name": { "type": "string" },
          "zodiac": { "type": "string" }
        },
        "required": ["age", "name", "zodiac"],
        "additionalProperties": false
      },
      {
        "type": "object",
        "properties": {
          "age": { "type": "string", "pattern": "^[0-9]+$" },
